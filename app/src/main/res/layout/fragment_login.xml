<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_cyan_500"
    tools:context="com.example.htds.firebasedemo.ui.fragment.LoginFragment">

    <include layout="@layout/view_toolbar_no_shadow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"

        android:paddingTop="36dp"
        android:paddingBottom="36dp"
        android:elevation="4dp"
        android:background="@color/md_white">

        <IconicsImageView
            android:id="@+id/icon_login"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            app:iiv_icon="faw-user"
            app:iiv_color="@color/md_blue_grey_300"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_user"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/icon_login"
            android:layout_marginTop="10dp"
            android:hint="@string/hint.login.username"
            app:met_primaryColor="@color/md_red_500"
            android:gravity="center_horizontal"
            app:met_floatingLabel="normal"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_pass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_user"
            android:layout_marginTop="10dp"
            android:hint="@string/hint.login.password"
            app:met_primaryColor="@color/md_red_500"
            android:gravity="center_horizontal"
            app:met_floatingLabel="normal"
            />

    </RelativeLayout>

</LinearLayout>
